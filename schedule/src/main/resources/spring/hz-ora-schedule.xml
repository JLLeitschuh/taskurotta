<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- CONSOLE -->
    <bean id = "consoleScheduleResource" class="ru.taskurotta.schedule.console.JobResource">
        <property name="jobStore" ref="scheduleStore" />
        <property name="hzScheduleEventDispatcher" ref="hzScheduleMessageDispatcher" />
    </bean>
    <!-- /CONSOLE -->


    <!-- SCHEDULING -->
    <bean id = "jobManager" class="ru.taskurotta.schedule.manager.QuartzJobManager" >
        <property name="jobStore" ref="scheduleStore" />
    </bean>

    <bean id = "scheduleStore" class="ru.taskurotta.schedule.storage.ora.OraJobStore" >
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id = "hzScheduleMessageDispatcher" class="ru.taskurotta.schedule.adapter.HzJobMessageHandler">
        <constructor-arg name="hzInstance" ref="hzInstance" />
        <constructor-arg name="jobManager" ref="jobManager" />
        <constructor-arg name="jobStore" ref="scheduleStore" />
        <constructor-arg name="scheduleTopicName" value="${hz.schedule.topic.name}" />
    </bean>
    <!-- /SCHEDULING -->

</beans>