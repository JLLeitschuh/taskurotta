<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:property-placeholder/>

    <bean id="fatResponseProcess" class = "ru.taskurotta.test.fat.response.impl.FatDeciderImpl">
        <property name="fatWorkerClient">
            <bean class="ru.taskurotta.ProxyFactory" factory-method="getWorkerClient">
                <constructor-arg value="ru.taskurotta.test.fat.response.impl.FatWorkerClient"/>
            </bean>
        </property>
        <property name="self">
            <bean class="ru.taskurotta.ProxyFactory" factory-method="getAsynchronousClient">
                <constructor-arg value="ru.taskurotta.test.fat.response.impl.FatDeciderImpl"/>
            </bean>
        </property>
    </bean>

    <bean id="fatResponseCreator" class="ru.taskurotta.test.fat.response.impl.FatWorkerImpl" />

</beans>