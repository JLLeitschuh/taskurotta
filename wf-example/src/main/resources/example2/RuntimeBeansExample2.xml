<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	
    <context:annotation-config/>
    <context:property-placeholder/>

    <bean id="runtimeProvider" class="ru.taskurotta.RuntimeProviderManager" factory-method="getRuntimeProvider"/>

    <bean id="multiplierWorker" class="ru.taskurotta.example.calculate.worker.impl.MultiplierImpl">
    	<property name="sleep" value = "${sleep}" />
    </bean>

    <bean id="numberGenerator" class="ru.taskurotta.example.calculate.worker.impl.NumberGeneratorImpl">
    	<property name="maxNumber" value = "20" />
    	<property name="sleep" value = "${sleep}" />
    </bean>

    <bean id="summarizer" class="ru.taskurotta.example.calculate.worker.impl.SummarizerImpl">
    	<property name="sleep" value = "${sleep}" />
    </bean>

    <bean id="multiplierClient" factory-bean="runtimeProvider" factory-method="getWorkerClient">
        <constructor-arg value="ru.taskurotta.example.calculate.worker.client.MultiplierClient"/>
    </bean>

    <bean id="summaeiserClient" factory-bean="runtimeProvider" factory-method="getWorkerClient">
        <constructor-arg value="ru.taskurotta.example.calculate.worker.client.SummarizerClient"/>
    </bean>

    <bean id="numberGeneratorClient" factory-bean="runtimeProvider" factory-method="getWorkerClient">
        <constructor-arg value="ru.taskurotta.example.calculate.worker.client.NumberGeneratorClient"/>
    </bean>

    <bean id="mathActionDecider" class="ru.taskurotta.example.calculate.decider.MathActionDeciderImpl">
        <property name="multiplierClient" ref="multiplierClient"/>
        <property name="numberGeneartorClient" ref="numberGeneratorClient"/>
        <property name="summarizerClient" ref="summaeiserClient"/>
        <property name="selfAsync">
            <bean factory-bean="runtimeProvider" factory-method="getAsynchronousClient">
                <constructor-arg value="ru.taskurotta.example.calculate.decider.MathActionDeciderImpl"/>
            </bean>
        </property>
    </bean>
    
</beans>