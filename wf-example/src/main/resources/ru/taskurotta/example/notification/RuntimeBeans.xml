<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean id="runtimeProvider" class="ru.taskurotta.RuntimeProviderManager" factory-method="getRuntimeProvider"/>

    <bean id="profileWorker" class="ru.taskurotta.example.notification.workers.ProfileWorkerImpl"/>

    <bean id="emailWorker" class="ru.taskurotta.example.notification.workers.EmailWorkerImpl"/>

    <bean id="smsWorker" class="ru.taskurotta.example.notification.workers.SMSWorkerImpl"/>

    <bean id="notificationDecider" class="ru.taskurotta.example.notification.decider.NotificationDeciderImpl">
        <property name="userProfile">
            <bean class="ru.taskurotta.ProxyFactory" factory-method="getWorkerClient">
                <constructor-arg value="ru.taskurotta.example.notification.workers.ProfileWorkerClient"/>
            </bean>
        </property>
        <property name="emailTransport">
            <bean class="ru.taskurotta.ProxyFactory" factory-method="getWorkerClient">
                <constructor-arg value="ru.taskurotta.example.notification.workers.EmailWorkerClient"/>
            </bean>
        </property>
        <property name="smsTransport">
            <bean class="ru.taskurotta.ProxyFactory" factory-method="getWorkerClient">
                <constructor-arg value="ru.taskurotta.example.notification.workers.SMSWorkerClient"/>
            </bean>
        </property>
        <property name="asynchronous">
            <bean class="ru.taskurotta.ProxyFactory" factory-method="getAsynchronousClient">
                <constructor-arg value="ru.taskurotta.example.notification.decider.NotificationDeciderImpl"/>
            </bean>
        </property>
    </bean>

</beans>