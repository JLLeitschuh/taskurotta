<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean id="runtimeProvider" class="ru.taskurotta.RuntimeProviderManager" factory-method="getRuntimeProvider"/>

    <bean id="profileWorker" class="ru.taskurotta.example.workers.ProfileWorkerImpl"/>

    <bean id="emailWorker" class="ru.taskurotta.example.workers.EmailWorkerImpl"/>

    <bean id="smsWorker" class="ru.taskurotta.example.workers.SMSWorkerImpl"/>

    <bean id="profileWorkerClient" factory-bean="runtimeProvider" factory-method="getWorkerClient">
        <constructor-arg value="ru.taskurotta.example.workers.ProfileWorkerClient"/>
    </bean>

    <bean id="emailWorkerClient" factory-bean="runtimeProvider" factory-method="getWorkerClient">
        <constructor-arg value="ru.taskurotta.example.workers.EmailWorkerClient"/>
    </bean>

    <bean id="smsWorkerClient" factory-bean="runtimeProvider" factory-method="getWorkerClient">
        <constructor-arg value="ru.taskurotta.example.workers.SMSWorkerClient"/>
    </bean>

    <bean id="notificationDecider" class="ru.taskurotta.example.decider.NotificationDeciderImpl">
        <property name="userProfile" ref="profileWorkerClient"/>
        <property name="emailTransport" ref="emailWorkerClient"/>
        <property name="smsTransport" ref="smsWorkerClient"/>
        <property name="asynchronous">
            <bean factory-bean="runtimeProvider" factory-method="getAsynchronousClient">
                <constructor-arg value="ru.taskurotta.example.decider.NotificationDeciderImpl"/>
            </bean>
        </property>
    </bean>

</beans>