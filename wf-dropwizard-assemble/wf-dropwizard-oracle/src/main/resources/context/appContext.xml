<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder/>

    <bean id="dbConnect" class="ru.taskurotta.oracle.test.DbConnect"/>


    <bean id="taskDao" class="ru.taskurotta.oracle.test.TaskDaoOracle">
        <constructor-arg name="dbConnect" ref="dbConnect"/>
    </bean>

    <bean id="taskPullerResource" class="ru.taskurotta.dropwizard.resources.TaskPullerResource">
        <property name="taskServer" ref="taskServer"/>
    </bean>

    <bean id="taskReleaserResource" class="ru.taskurotta.dropwizard.resources.TaskReleaserResource">
        <property name="taskServer" ref="taskServer"/>
    </bean>

    <bean id="taskStarterResource" class="ru.taskurotta.dropwizard.resources.TaskStarterResource">
        <property name="taskServer" ref="taskServer"/>
    </bean>

    <!--<bean id = "taskServer" class="ru.taskurotta.dropwizard.internal.pooling.ThreadPooledTaskServer">-->
    <!--<constructor-arg name="taskServer" ref="taskServerGeneral" />-->
    <!--<property name="executorService">-->
    <!--<bean factory-bean="executorServiceFactory" factory-method="getFixedThreadPool" />-->
    <!--</property>-->
    <!--<property name="timeout" value = "${internalPool.threadTimeout}" />-->
    <!--</bean>-->

    <bean id="executorServiceFactory" class="ru.taskurotta.dropwizard.internal.pooling.ExecutorServiceFactory">
        <property name="threads" value="${internalPool.poolSize}"/>
    </bean>

    <bean id="taskServer" class="ru.taskurotta.server.TaskServerGeneral">
        <constructor-arg name="taskDao" ref="taskDao"/>
    </bean>


    <bean id="checkTaskServer" class="ru.taskurotta.dropwizard.health.CheckTaskServer">
        <constructor-arg name="name" value="check task server"/>
        <property name="taskServer" ref="taskServer"/>
    </bean>


</beans>