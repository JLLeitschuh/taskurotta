<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="applicationContext.xml" />

    <bean id="restarter" class="ru.taskurotta.restartprocesses.Restarter" depends-on="taskServer">
        <property name="dataSource" ref="dataSource" />
        <property name="period" value="1800" />
        <property name="processBackend" ref="processBackend" />
        <property name="taskServerStartTime" value="#{T(System).currentTimeMillis()}" />
    </bean>

</beans>