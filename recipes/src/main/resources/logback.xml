<?xml version="1.0" encoding="UTF-8" ?>

<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%-4r [%t] %-5p %c - %m%n</pattern>
		</encoder>
	</appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>./logs/recipes.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-4r [%t] %-5p %c - %m%n</pattern>
        </encoder>
    </appender>

	<logger name="ru.taskurotta" level="INFO" />
    <logger name="ru.taskurotta.bootstrap.Inspector" level="DEBUG" />
    <logger name="ru.taskurotta.bootstrap.pool.ActorMultiThreadPool" level="DEBUG" />
    <logger name="ru.taskurotta.bootstrap.pool.ActorSingleThreadPool" level="DEBUG" />
	<logger name="ru.taskurotta.server.json.ObjectFactory" level="WARN" />
    <logger name="org.springframework" level="OFF"/>
    <logger name="httpclient.wire" level="WARN" />
    <logger name="org.apache.commons.httpclient" level="WARN" />


	<root>
		<appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
	</root>

</configuration>
