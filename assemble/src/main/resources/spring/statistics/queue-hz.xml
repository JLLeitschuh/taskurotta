<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="metricsQueueBackend" class="ru.taskurotta.service.hz.recovery.HzQueueServiceStatistics">
        <constructor-arg name="queueService" ref="realQueueBackend"/>
        <constructor-arg name="hzInstance" ref="hzInstance"/>

        <property name="mergePeriod">
            <bean class="ru.taskurotta.util.DurationParser" factory-method="toMillis">
                <constructor-arg name="duration" value="${hz.recovery.merge-period}"/>
            </bean>
        </property>
        <property name="queueNamePrefix" value="${hz.queue.task.prefix}"/>
        <property name="queueSizeMetricPeriodSeconds" value="${metric.data.queue-size.period-in-seconds}"/>
        <property name="metricsFactory" ref="metricsFactory"/>
        <property name="numberDataListener" ref="metricsNumberDataHandler"/>
    </bean>

    <bean id="queueService" class="ru.taskurotta.assemple.ProxyQueueService">
        <constructor-arg name="target" ref="metricsQueueBackend"/>
    </bean>

</beans>