<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       ">

    <bean id = "realJobManager" class="ru.taskurotta.schedule.manager.quartz.QuartzJobManager" >
        <property name="jobStore" ref="jobStore" />
        <property name="queueInfoRetriever" ref="realQueueBackend" />
        <property name="taskServer" ref="taskServer" />
    </bean>

    <bean id = "realJobStore" class="ru.taskurotta.schedule.storage.file.JsonDirectoryJobStore" init-method="init">
        <property name="storeLocation" value="${schedule.job.store.dir}" />
    </bean>

    <bean id="jobStore" class="ru.taskurotta.schedule.adapter.HzJobStoreAdapter">
        <constructor-arg name="hzInstance" ref="hzInstance" />
        <constructor-arg name="jobStore" ref="realJobStore" />
        <constructor-arg name="isSharedStore" value="${schedule.job.store.shared}" />
    </bean>

    <bean id="jobManager" class="ru.taskurotta.schedule.adapter.HzJobManagerAdapter">
        <constructor-arg name="hzInstance" ref="hzInstance" />
        <constructor-arg name="scheduleTopicName" value = "${hz.schedule.topic-name}" />
        <constructor-arg name="jobManager" ref="realJobManager" />
    </bean>

    <bean id = "consoleScheduleResource" class="ru.taskurotta.schedule.console.SchedulerResource">
        <property name="jobManager" ref="jobManager" />
    </bean>

    <bean id="consoleScheduleValidator" class="ru.taskurotta.schedule.console.SchedulerValidationResource" />

</beans>