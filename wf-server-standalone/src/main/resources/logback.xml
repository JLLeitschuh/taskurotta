<?xml version="1.0" encoding="UTF-8" ?>

<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5p [%t] %c - %m%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/server.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d %-5p [%t] %c - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="ru.taskurotta" level="INFO"/>
    <logger name="ru.taskurotta.backend.hz.server" level="DEBUG"/>
    <logger name="ru.taskurotta.client.hazelcast" level="DEBUG"/>
    <logger name="ru.taskurotta.client.hazelcast.task" level="DEBUG"/>
    <logger name="ru.taskurotta.server" level="DEBUG"/>

    <logger name="com.hazelcast" level="OFF"/>
    <logger name="org.springframework" level="OFF"/>

    <root>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
